<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" stylesheets="@../styles/bootstrap.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.utfpr.pb.ProjetoFinal.controller.FXMLVendaListaController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="53.0" prefWidth="680.0" VBox.vgrow="NEVER">
            <children>
                <Button mnemonicParsing="false" onAction="#newRecord" prefHeight="25.0" prefWidth="100.0" styleClass="btn-primary" text="Novo">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="buttonEdit" mnemonicParsing="false" onAction="#edit" prefHeight="25.0" prefWidth="100.0" styleClass="btn-primary" text="Editar">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#delete" prefHeight="25.0" prefWidth="100.0" styleClass="btn-primary" text="Remover">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="tableData" prefHeight="351.0" prefWidth="587.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="columnId" maxWidth="150.0" minWidth="87.0" prefWidth="87.0" text="Código" />
                <TableColumn fx:id="columnDescricao" maxWidth="250.0" minWidth="31.0" prefWidth="155.0" text="Descrição" />
                <TableColumn fx:id="columnValorTotal" maxWidth="261.0" prefWidth="105.0" text="Valor" />
                <TableColumn fx:id="columnDtVenda" minWidth="0.0" prefWidth="131.0" text="Data da Conta" />
            </columns>
        </TableView>
    </children>
</VBox>
